<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="v1_create_championship_organizers_championships_table" author="Kirill Bolotov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="championship_organizers_championships"/>
            </not>
        </preConditions>

        <createTable tableName="championship_organizers_championships">
            <column name="championship_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_championship_organizers_championships_championship"
                             references="championship(championship_id)"/>
            </column>
            <column name="organizer_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_championship_organizers_championships_organizer"
                             references="championship_organizers(organizer_id)"/>
            </column>
        </createTable>
        <comment>Create championship_organizers table</comment>
    </changeSet>

    <changeSet id="v1_fill_championship_organizers_championships_table" author="Kirill Bolotov">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="championship_organizers_championships"/>
            <tableIsEmpty tableName="championship_organizers_championships"/>
        </preConditions>
        <loadData tableName="championship_organizers_championships" file="db/data/championship_organizers_championships.csv"/>
        <comment>Fill table if it isn't empty</comment>
    </changeSet>
</databaseChangeLog>
